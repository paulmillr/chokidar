{
  "name": "chokidar",
  "description": "Minimal and efficient cross-platform file watching library",
  "version": "4.0.3",
  "type": "module",
  "homepage": "https://github.com/paulmillr/chokidar",
  "author": "Paul Miller (https://paulmillr.com)",
  "files": [
    "index.js",
    "index.d.ts",
    "handler.js",
    "handler.d.ts",
    "!**/*.test.*",
    "src/index.ts",
    "src/handler.ts"
  ],
  "main": "./index.js",
  "exports": {
    ".": {
      "default": "./index.js"
    },
    "./handler.js": {
      "default": "./handler.js"
    }
  },
  "dependencies": {
    "readdirp": "^4.1.0"
  },
  "devDependencies": {
    "@paulmillr/jsbt": "0.4.1",
    "@types/node": "22.10.10",
    "micro-should": "0.5.3",
    "prettier": "3.5.2",
    "tinyspy": "3.0.2",
    "typescript": "5.8.2",
    "upath": "2.0.1"
  },
  "sideEffects": false,
  "engines": {
    "node": ">= 14.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulmillr/chokidar.git"
  },
  "bugs": {
    "url": "https://github.com/paulmillr/chokidar/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint": "prettier --check src",
    "format": "prettier --write src",
    "test": "node index.test.js",
    "test:bun": "bun index.test.js"
  },
  "keywords": [
    "fs",
    "watch",
    "watchFile",
    "watcher",
    "watching",
    "file",
    "fsevents"
  ],
  "funding": "https://paulmillr.com/funding/"
}
