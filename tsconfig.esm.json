{
  "extends": "@paulmillr/jsbt/tsconfig.esm.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "esm",
    "module": "es2020",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": false,
    "sourceMap": false,
    "declarationMap": false,
    "isolatedDeclarations": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
